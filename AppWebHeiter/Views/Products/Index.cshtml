@model IEnumerable<Products>;
@{
    ViewData["Title"] = "Index";
}

<div class = "container p-3">
    <div class = "row pt-4">
        <div class="col-6">
            <h1>Listagem de Produtos</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Products" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Novo Produto</a>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="prudtoModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <div class="mt-2 d-flex flex-row-reverse">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div id="conteudo">

        </div>
        <div class="mt-2 d-flex flex-row-reverse">
            <button type="button" class="btn btn-primary text-right" data-bs-dismiss="modal">Fechar</button>
        </div>
      </div>
    </div>
  </div>
</div>

<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Preco
            </th>
            <th>
                Estoque
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var prod in Model)
        {
            <tr>
                <td width="50%">
                    <a href="#" class="btn btn-default details" data-value="@prod.Id" data-bs-toggle="modal" data-bs-target="#prudtoModal">@prod.Name</a>
                </td>
                <td width="50%">
                    @prod.Preco
                </td width="50%">
                <td width="50%">
                    @prod.QtdEstoque
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts{
    <script>
    $(document).ready(function (){
        $(".details").click(function (){

            var id = $(this).data("value");

            $("#conteudo").load("/Products/Detalhes/"+ id);
        })
    })
    </script>
}