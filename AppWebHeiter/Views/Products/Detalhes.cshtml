
@model Products

@{
    ViewData["Title"] = "Produto";
}
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@Model.Name</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <img src="/Images/@Model.NomeArquivo" width="250px" height="250px"/>
        </div>
        <div class="mb-3">
            <label asp-for="Descricao">Descrição do produto</label>
            <textarea asp-for="Descricao" class="form-control" rows="3" disabled/></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="Preco">Valor do Produto</label>
            <input asp-for="Preco" class="form-control" disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="QtdEstoque">Quantidade em estoque</label>
            <input asp-for="QtdEstoque" class="form-control" disabled/>
        </div>
    </div>


