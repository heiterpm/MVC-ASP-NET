
@model Products
@{
    ViewData["Title"] = "Create";
}

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Novo produto</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name">Nome do Produto</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Descricao">Descrição do produto</label>
            <input asp-for="Descricao" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Preco">Valor do Produto</label>
            <input asp-for="Preco" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="QtdEstoque">Quantidade em estoque</label>
            <input asp-for="QtdEstoque" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Img">Upload da Imagem</label>
            <input asp-for="Img" class="form-control" accept="Images/*"/>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Criar</button>
        <a asp-controller="Products" asp-action="Index" class="btn btn-secondary" style="width:180px">
            Voltar para Produtos
        </a>
    </div>
</form>
